<script>
/* THEME TOGGLE */
const toggle = document.getElementById("theme-toggle");

if (localStorage.getItem("theme") === "dark") {
    document.body.classList.add("dark-mode");
}

toggle.onclick = () => {
    document.body.classList.toggle("dark-mode");
    localStorage.setItem(
        "theme",
        document.body.classList.contains("dark-mode") ? "dark" : "light"
    );
};

/* FORM VALIDATION + STORAGE */
const form = document.getElementById("contactForm");

form.addEventListener("submit", function(e) {
    e.preventDefault();

    let valid = true;
    emailError.textContent = phoneError.textContent = passwordError.textContent = "";

    if (!email.value.includes("@")) {
        emailError.textContent = "Enter a valid email";
        valid = false;
    }

    if (phone.value.length !== 10 || isNaN(phone.value)) {
        phoneError.textContent = "Enter 10-digit phone number";
        valid = false;
    }

    if (password.value.length < 6) {
        passwordError.textContent = "Password must be at least 6 characters";
        valid = false;
    }

    if (valid) {
        const user = {
            email: email.value,
            phone: phone.value
        };
        localStorage.setItem("userData", JSON.stringify(user));
        displayData();
        form.reset();
    }
});

/* DISPLAY STORED DATA */
function displayData() {
    const data = JSON.parse(localStorage.getItem("userData"));
    if (data) {
        savedData.textContent =
            "Saved â†’ Email: " + data.email + " | Phone: " + data.phone;
    }
}

displayData();
</script>


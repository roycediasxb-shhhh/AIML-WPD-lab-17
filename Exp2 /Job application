        }

        /* Form elements */
        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 12px;
            border: 2px solid #ccc;
            border-radius: 4px;
        }

        /* Focus state */
        input:focus,
        textarea:focus {
            border-color: #0077cc;
            outline: none;
        }

        /* Valid state */
        input:valid,
        select:valid,
        textarea:valid {
            border-color: green;
        }

        /* Invalid state */
        input:invalid,
        select:invalid,
        textarea:invalid {
            border-color: red;
        }

        /* First input styling */
        input:first-of-type {
            border-radius: 12px;
        }

        /* Radio group */
        .radio-group {
            margin-bottom: 12px;
            padding: 10px;
            border: 2px solid #ccc;
        }

        .radio-group input[type="radio"]:checked {
            box-shadow: 0 0 5px #0077cc;
            accent-color: #0077cc;
        }

        .radio-group input[type="radio"]:checked + label {
            color: #0077cc;
            font-weight: bold;
        }

        /* Submit button */
        button {
            padding: 10px;
            width: 100%;
            background-color: #555;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #0077cc;
        }
    </style>
